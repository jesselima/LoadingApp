<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="3000"
        app:autoTransition="animateToEnd">

        <KeyFrameSet>
            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/textFileName"
                android:alpha="0.0"/>
            <KeyAttribute
                app:framePosition="40"
                app:motionTarget="@id/textFileName"
                android:alpha="1.0"/>

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/textStatus"
                android:alpha="0.0"/>
            <KeyAttribute
                app:framePosition="80"
                app:motionTarget="@id/textStatus"
                android:alpha="1.0"/>

            <KeyAttribute
                app:framePosition="0"
                app:motionTarget="@id/textSource"
                android:alpha="0.0"/>
            <KeyAttribute
                app:framePosition="100"
                app:motionTarget="@id/textSource"
                android:alpha="1.0"/>
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/buttonOpenDownloadsFolder"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_default"
            android:layout_marginBottom="@dimen/spacing_xxxl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@+id/buttonGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/buttonOpenDownloadsFolder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_default"
            app:layout_constraintBottom_toTopOf="@+id/buttonGoBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@+id/buttonGoBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:layout_marginBottom="@dimen/spacing_xl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </ConstraintSet>
</MotionScene>
